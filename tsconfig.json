{
  "compilerOptions": {
    "allowJs": true,                            //允許編譯javascript文件。
    "declaration": false,                       //生成相應的.d.ts文件。
    "strict": false,                            //啟用所有嚴格類型檢查選項
    "module": "commonjs",                       //指定生成哪個模塊系統代
    "lib": [ "es2015", "es2017", "dom" ],
    "target": "es5",                            //指定ECMAScript目標版本
    "experimentalDecorators": true,             //打開裝飾器功能
    "emitDecoratorMetadata": true,              //能讀取元數據,裝飾器使用
    "outFile": "./dist/index.js",               //將輸出文件合併為一個文件。
    "outDir": "temp/vscode-dist",               //重定向輸出目錄
    "declarationDir": "./dist",                 //生成聲明文件的輸出路徑。
    "forceConsistentCasingInFileNames": true,   //路徑強制區分大小寫。
    "downlevelIteration" : true,                //允許for of 迭代
//    "noImplicitReturns" : true,                 //如果該方法中不是全部都能有返回值，則提示Error。
//    "noEmitHelpers" : true,

  },
  "files": [
    "index.d.ts"
  ],
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "library",
    "local",
    "temp",
    "build",
    "settings",
  ]
}