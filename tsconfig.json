{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "strict": false,
    "module": "commonjs",
    "lib": [ "es2015", "es2017", "dom" ],
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "temp/vscode-dist",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration" : true,
    "noEmitHelpers" : false
  },
  "files": [
    "index.d.ts"
  ],
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "library",
    "local",
    "temp",
    "build",
    "settings",
  ]
}